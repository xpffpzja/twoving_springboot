<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.himedia.twoving.dao.INoticeDAO">
    <select id="getAllCount" resultType="_int">
        select count(*) from notice
    </select>

    <select id="getNoticeList" resultType="com.himedia.twoving.dto.NoticeVO" parameterType="com.himedia.twoving.dto.Paging">
        select* from notice order by noticeyn desc, nseq desc limit #{displayRow} offset #{startNum}
    </select>

    <update id="updateCount">
        update notice set readcount=readcount+1 where nseq=#{param1}
    </update>

    <select id="getOneList" resultType="com.himedia.twoving.dto.NoticeVO">
        select* from notice where nseq=#{param1}
    </select>
</mapper>