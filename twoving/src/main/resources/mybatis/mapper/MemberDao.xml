<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.himedia.twoving.dao.IMemberDao">

    <select id="getMember" resultType="com.himedia.twoving.dto.MemberVO">
        select * from member where userid=#{param1}
    </select>

    <insert id="insertMember" parameterType="com.himedia.twoving.dto.MemberVO">
        insert into member( userid, pwd, name, email) values(#{userid},#{pwd},#{name},#{email})
    </insert>

    <update id="updateMember" parameterType="com.himedia.twoving.dto.MemberVO">
        update member set name=#{name}, pwd=#{pwd}, email=#{email}, phone=#{phone}
        where userid=#{userid}
    </update>

    <delete id="deleteMember">
        delete from member where userid=#{param1}
    </delete>

</mapper>